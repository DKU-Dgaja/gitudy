<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BACKGROUND"
    tools:context=".ui.home.MainHomeActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/homeProfileLayout"
        android:layout_width="match_parent"
        android:layout_height="570dp"
        android:layout_marginTop="-20dp"
        android:backgroundTint="#1B1B25"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="22dp"
            android:layout_marginBottom="35dp">

            <LinearLayout
                android:id="@+id/attendanceBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="37dp"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_attendance" />

                <TextView
                    style="@style/B7_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="출석하기"
                    android:textColor="@color/WHITE" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/todoBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="37dp"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintStart_toEndOf="@+id/attendanceBtn"
                app:layout_constraintTop_toTopOf="parent">


                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_todo" />

                <TextView
                    style="@style/B7_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TO-DO"
                    android:textColor="@color/WHITE" />
            </LinearLayout>

            <ImageView
                android:id="@+id/alarmBtn"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginTop="37dp"
                android:src="@drawable/ic_alarm_white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ProgressBar
                android:id="@+id/profileProgressBar"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="65dp"
                android:progress="70"
                android:layout_centerInParent="true"
                android:progressDrawable="@drawable/progress_bar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/characterImg" />

            <ImageView
                android:id="@+id/characterImg"
                android:layout_width="270dp"
                android:layout_height="270dp"
                android:src="@drawable/character_bebe_lv1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/nickname"
                style="@style/B2_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/nickname"
                android:textColor="@color/WHITE"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/profileProgressBar" />

            <ImageView
                android:id="@+id/editBtn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_pencil"
                app:layout_constraintStart_toEndOf="@+id/nickname"
                app:layout_constraintTop_toBottomOf="@+id/characterImg" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/box_stroke_200_r21"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/nickname">

                <TextView
                    android:id="@+id/scoreAndRank"
                    style="@style/B6_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/score_with_ranking"
                    android:textColor="@color/GS_200" />

            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homeProfileLayout">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BACKGROUND"
    tools:context=".ui.home.MainHomeActivity">

    <FrameLayout
        android:id="@+id/mainFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/menu_bottom"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginBottom="-20dp"
        android:background="@color/WHITE"
        app:cardCornerRadius="20dp"
        android:elevation="60dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:gravity="center"
            android:paddingLeft="50dp"
            android:paddingRight="50dp">

            <LinearLayout
                android:id="@+id/mainHomeBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_navi_home_active" />

                <TextView
                    style="@style/B7_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="홈"
                    android:textColor="@color/GS_800" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/myStudyHomeBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/linearLayout2"
                app:layout_constraintStart_toEndOf="@+id/linearLayout3"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_navi_mystudy" />

                <TextView
                    style="@style/B7_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="마이스터디"
                    android:textColor="@color/GS_500" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/feedHomeBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/linearLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_navi_feed" />

                <TextView
                    style="@style/B7_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="전체피드"
                    android:textColor="@color/GS_500" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/profileHomeBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_navi_profile" />

                <TextView
                    style="@style/B7_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="프로필"
                    android:textColor="@color/GS_500" />

            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
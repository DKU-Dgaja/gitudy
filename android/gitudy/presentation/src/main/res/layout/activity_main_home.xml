<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BACKGROUND"
    tools:context=".ui.home.MainHomeActivity">

    <FrameLayout
        android:id="@+id/mainFragmentContainerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/menu_bottom"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginBottom="-20dp"
        android:backgroundTint="#F2FFFFFF"
        app:cardElevation="10dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center">

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/navHome"
                    android:layout_width="28dp"
                    android:layout_height="48dp"
                    android:button="@null"
                    android:background="@drawable/selector_nav_home"
                    android:layout_marginRight="50dp" />
                <RadioButton
                    android:id="@+id/navMyStudy"
                    android:layout_width="52dp"
                    android:layout_height="48dp"
                    android:button="@null"
                    android:layout_marginRight="50dp"
                    android:background="@drawable/selector_nav_mystudy"/>
                <RadioButton
                    android:id="@+id/navFeed"
                    android:layout_width="42dp"
                    android:layout_height="48dp"
                    android:button="@null"
                    android:layout_marginRight="50dp"
                    android:background="@drawable/selector_nav_feed"/>
                <RadioButton
                    android:id="@+id/navProfile"
                    android:layout_width="32dp"
                    android:layout_height="48dp"
                    android:button="@null"
                    android:background="@drawable/selector_nav_profile"/>
            </RadioGroup>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>